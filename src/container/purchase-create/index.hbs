{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class="main">
{{#with data}}
<form method="POST" action="/purchase=submit?id={{id}}" class="form-card">
  <h1 class="header__title">Ваше замовлення</h1>

  <ul class="cart">
    {{#each cart}} 
      <li class="cart__item">
        <span>{{text}}</span>
        <span>{{price}} грн</span>
      </li>
  </ul>
  {{>divider}}

  <h1 class="header__title">Ваше замовлення</h1>

  {{>field label="Ім'я" name="firstname"}}
  {{>field label="Прізвище" name="lastname"}}
  {{>field label="Телефон" name="phone"}}
  {{>field label="Пошта" name="email"}}
  {{>field label="Коментар" name="comment"}}
  {{>field label="Списати бонуси" name="bonus"}}
  {{>field label="Про-код" name="promocode"}}

  {{>divider}}

  <strong class="form-card__total">
    Всього: {{totalPrice}} грн
  </strong>

  {{> button text="Оформити замовлення"}}
</form>
{{/with}}
</main>